<%= content_tag :div,
id: "userinfo",
data: {
  ishost: @host,
  email: @email,
  myname: @myname } do %>
<% end %>
  <div id="main">
    <a href="/home" class="leavechat">✖</a>
    <div id="player" style="pointer-events: none"></div>
    <div class="controls">
      <input id="slider" type="range" min="0" max="100" value="0" step="1"/>
      <% if @host %>
      <button id="playBtn">재생</button>
      <button id="pauseBtn">일시정지</button>
      <% end %>
      <span id="volumeEmoji">🔊</span>
      <input id="volume" orient="vertical" type="range" min="0" max="100" value="100" step="1"/>
      <span class="chatopen">💬채팅열기</span>
    </div>
  </div>
  <div id="mySidenav" class="sidenav">
  <% unless @host %>
  <div id="warn">재생 컨트롤은 호스트만 할 수 있습니다.</div>
  <% end %>
    <a href="javascript:void(0)" class="closebtn">&times;</a>        
    <ul id="messages"></ul>
    <form id="form" action="">
      <input id="input" autocomplete="off" /><button>Send</button>
    </form>
  </div>